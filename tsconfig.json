{
  "compilerOptions": {
    "target": "es2016",     
    "module": "commonjs",   
    "rootDir": "./src",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "baseUrl": "./src",
    "strict": true,         
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  }
}
